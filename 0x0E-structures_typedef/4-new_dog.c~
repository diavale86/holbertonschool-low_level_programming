#include "dog.h"

/**
 *new_dog - function that creates a new dog
 *@name: name of dog
 *@age: age of dog
 *@owner: owner of dog
 *Return: new dog
 */

dog_t *new_dog(char *name, float age, char *owner)
{
	char *s;
	char *j;
	dog_t *mia;

	if (name == NULL || owner == NULL)
		return (NULL);

	s = strdup(name);
	j = strdup(owner);

	mia = malloc(sizeof(dog_t));
	if (mia == NULL)
	return (NULL);

	else
	{
		mia->name = s;
		mia->owner = j;
		mia->age = age;
	}
	return (mia);
}
