#include "3-calc.h"

/**
 *get_op_func - funcion  
 *@s: array
 *Return: -1
 */

int (*get_op_func(char *s))(int, int)
{
    op_t ops[] = {
        {"+", op_add},
        {"-", op_sub},
        {"*", op_mul},
        {"/", op_div},
        {"%", op_mod},
        {NULL, NULL}
    };
    int i = 0;

    while (ops[i][0] != NULL)
    {
	    if (strcmp(ops[i].op, s) == 0)
		    return (ops[i]. f);
	    i++;
    }
    return (NULL);   
}
